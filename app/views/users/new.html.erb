<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_for @user , :url => {:action => 'create'} do |f| %>
          <div class="field">
            <%= f.label :"名前" %><br>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :"メールアドレス" %><br>
            <%= f.text_field :email %>
          </div>
          <div class="field">
            <%= f.label :"パスワード" %><br>
            <%= f.password_field :password %>
          </div>
          <div class="field">
            <%= f.label :"パスワード(確認用)" %><br>
            <%= f.password_field :password_confirmation %>
          </div>
          <div class="actions">
            <%= f.submit :value => "新規登録" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>