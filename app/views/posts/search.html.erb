<div class="main posts-index">
  <div class="container">
       <%= form_tag("/posts/search") do %>
        <p>検索(ユーザー名、コメント内容)</p>
          <input class="box" name="search" value="<%= @search %>" >
       <% end %>

    <% if @post  %>
    <% @post.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>

        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
            <span class="post-time"><%= time_ago_in_words(post.created_at) %></span>
          </div>

          <div class="store_category">
            コンビニ：<%= link_to(post.store.name, "/posts/#{post.id}") %>
          </div>

          <div class="post-product_comment">
            コメント：<br><%= link_to(post.content, "/posts/#{post.id}") %>
          </div>

          <div class="post-product_name">
            商品名：『<%= link_to(post.product_name, "/posts/#{post.id}") %>』<br>
          </div>
          <div>
          <img src="<%= "/post_images/#{post.product_image}" %>">
          </div>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>